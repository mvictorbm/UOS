//Miasma Bot (Whammy)
//Author: Llama Vortex
//// ** SETUP ** ////
//Timers
if not timerexists 't_honor'
  createtimer 't_honor'
endif
if not timerexists 'nocast'
  @settimer 'nocast' 2000
endif
//Mount
if not @findalias 'mount'
  @setalias 'mount' 0x3ef74
endif
//Logout if dead
if dead 'self'
  if @inrange 'mount' 5
    logoutbutton
  else
    stop
  endif
endif
//// ** Outside of loop routine ** ////
if @findtype 0x30 2301 'ground'
  target! 'found'
  @setalias 'enemy' 'found'
  @setalias 'enemymiasma' 'self'
  headmsg '[ENEMY]' 16 'enemy'
  settimer 't_honor' 0
  attack 'enemy'
else
  @getenemy 'gray' 'criminal' 'closest'
  @unsetalias 'enemymiasma'
  if not @inrange 'enemy' 1
    @unsetalias 'enemy'
  endif
endif
if @poisoned 'self' and diffhits > 30
  if targetexists
    canceltarget
  endif
  chivalryheal 'self'
  pause 2000
else
  if not targetexists and timer 't_honor' > 10000
    virtue 'honor'
  endif
endif
if timer 't_honor' > 30000
  if not buffexists 'curse weapon' and counttype 0xf8a 0 'backpack' > 1
    cast 'curse Weapon'
    @settimer 'nocast' 0
  endif
endif
if not buffexists 'enemy of one' and findalias 'enemymiasma'
  cast 'enemy of one'
endif
if not buffexists 'confidence' and hits < maxhits
  cast 'confidence'
  pause 500
endif
//Run towards miasma
//In order to walk type in game: -setalias walk self
//To stop walking type in game: -unsetalias walk
if @findalias 'walk' and timer 't_honor' < 2000
  if not @inrange 'enemy' 1 and @findalias 'enemymiasma'
    if dead
      stop
    elseif @x 'enemy' > x 'self' and @y 'enemy' > y 'self'
      run 'southeast'
    elseif @x 'enemy' < x 'self' and @y 'enemy' > y 'self'
      run 'southwest'
    elseif @x 'enemy' > x 'self' and @y 'enemy' < y 'self'
      run 'northeast'
    elseif @x 'enemy' < x 'self' and @y 'enemy' < y 'self'
      run 'northwest'
    elseif @x 'enemy' > x 'self' and @y 'enemy' == y 'self'
      run 'east'
    elseif @x 'enemy' < x 'self' and @y 'enemy' == y 'self'
      run 'west'
    elseif @x 'enemy' == x 'self' and @y 'enemy' > y 'self'
      run 'south'
    elseif @x 'enemy' == x 'self' and @y 'enemy' < y 'self'
      run 'north'
    endif
  endif
endif
//// ** Main Loop ** ////
while @inrange 'enemy' 1 and not dead 'enemy'
  attack 'enemy'
  if mana < 20
    cast 'lightning strike'
  else
    @setability 'secondary' 'on'
  endif
  //Send money
  if @findtype 0xe76 'any' 'backpack' 1 0
    waitforproperties 'found' 1000
    if @property 'Charges' 'found' <= 5
      //headmsg '# Atenção - Bag of Sending #' 63
    elseif @property 'Charges' 'found' == 0
      headmsg '# Bag of Sending charges: 0 #' 63
    endif
    if weight 'self' > 400
      if usetype! 0xe76
        waitfortarget 1000
        targettype! 0xeed
        pause 500
      endif
    endif
  endif
  //Cast spells
  if timer 'nocast' > 2000 and @inrange 'enemy' 10
    if diffhits > 10
      if not buffexists 'curse weapon' and counttype 0xf8a 0 'backpack' > 1
        cast 'curse Weapon'
        @settimer 'nocast' 1800
      endif
    elseif not buffexists 'Consecrate Weapon' and mana 'self' >= 15
      @cast 'consecrate weapon'
      @settimer 'nocast' 0
    endif
    if hits > 80 and stam < 50
      if mana 'self' >= 12
        @cast "Divine Fury"
        @settimer 'nocast' 0
      endif
    endif
    if not buffexists 'enemy of one' and findalias 'enemymiasma'
      cast 'enemy of one'
    endif
    settimer 't_honor' 0
  endif
endwhile
